{
  "manifest_version": 2,

  "name": "Tabster",
  "description": "Manage tabs with hotkeys!",
  "version": "1.2",
  "permissions": [
    "contentSettings",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["content.css"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "commands": {
    "showTabs": {
      "suggested_key": {
        "default": "Alt+T"
      },
      "description": "Show tabs!"
    }
  },
  "icons": {
    "128": "icon128.png"
  }
}
